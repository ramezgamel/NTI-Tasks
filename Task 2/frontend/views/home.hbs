{{>header}}
{{>navbar}}
<table class="table table-bordered">
  <thead>
    <tr class="text-center">
      <th>Title</th>
      <th>Content</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#if isEmpty}}
    <tr class="alert alert-danger">
      <td colspan="6">No Tasks Yet</td>
    </tr>
    {{else}}
    {{#each tasks}}
    <tr class="text-center">
      <td>{{title}}</td>
      <td>{{content}}</td>
      <td>
        <a href="/single/{{_id}}" class="btn btn-primary">Show</a> 
        <a href="/edit/{{_id}}" class="btn btn-success mx-2">Edit</a> 
        <a href="/del/{{_id}}" class="btn btn-danger">Delete</a>
      </td>
    </tr>
    {{/each}}
    {{/if}}
  </tbody>
</table>
{{>footer}}