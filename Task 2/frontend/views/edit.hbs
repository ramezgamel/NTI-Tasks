{{>header}}
{{>navbar}}

<form method="post">
  <input type="text" class="form-control" placeholder="Title" name="title" value="{{task.title}}">
  <input type="text" class="form-control my-3" placeholder="Content" name="content" value="{{task.content}}">
  <input type="text" class="form-control" placeholder="dueDate" name="dueDate" value="{{task.dueDate}}">

  <div class="my-3 form-check">
    <input type="checkbox" class="form-check-input" id="exampleCheck1" {{#if task.status}}checked{{/if}} name="status" >
    <label class="form-check-label" for="exampleCheck1">Status</label>
  </div>
  <button class="btn btn-success my-3">Update</button>
</form>

{{>footer}}